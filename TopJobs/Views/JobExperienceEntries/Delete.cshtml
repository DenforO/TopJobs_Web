@model TopJobs.Models.JobExperienceEntry

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this entry?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Name)
        </dd>
        <dt class="col-sm-2">
            Start
        </dt>
        <dd class="col-sm-10">
            @Model.DateStarted.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            End
        </dt>
        <dd class="col-sm-10">
            @{ if (Model.DateFinished != null)
                {
                    @(Model.DateFinished.Value.Date.ToShortDateString());
                }
                else
                {
                    @("Ongoing")
                }
            }
        </dd>
        <dt class="col-sm-2">
            Position
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PositionType.Name)
        </dd>
        <dt class="col-sm-2">
            Level
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PositionType.Level)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
