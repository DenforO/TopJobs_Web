@model IEnumerable<CandidateViewModel>

@{
    ViewData["Title"] = "Candidates";
}

<h1>Candidates</h1>

<table class="table align-middle mb-0 bg-light table-striped table-hover">
    <thead class="bg-light">
        <tr>
            <th>Name</th>
            <th>Date Applied</th>
            <th>Match percentage</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderBy(m => m.MatchingPercentage))
        {
            <tr>
                <td>
                    <div class="d-flex align-items-center" style="cursor: pointer">
                        @if (item.User.ProfilePicture != null)
                        {
                            <img src="data:image/*;base64, @(Convert.ToBase64String(item.User.ProfilePicture))"
                                 alt="avatar"
                                 style="width: 45px; height: 45px; cursor: pointer"
                                 class="rounded-circle" 
                                 onclick="window.location.href = '../Home/Profile?userId=@item.User.Id'"/>
                        }
                        else
                        {
                            <img src="~/img/profile-logo.png"
                                 alt="avatar"
                                 style="width: 45px; height: 45px; cursor: pointer"
                                 class="rounded-circle" 
                                 onclick="window.location.href = '../Home/Profile?userId=@item.User.Id'"/>
                        }
                        <div class="ms-3">
                            <p class="fw-bold mb-1" style="cursor: pointer" onclick="window.location.href = '../Home/Profile?userId=@item.User.Id'">@item.User.FullName</p>
                            <p class="text-muted mb-0" style="cursor: pointer" onclick="window.location.href = '../Home/Profile?userId=@item.User.Id'">@item.User.UserName</p>
                        </div>
                    </div>
                </td>
                <td>
                    <p class="fw-normal mb-1">@item.DateApplied.ToShortDateString()</p>
                </td>
                <td>
                    <p class="mb-1" style="font-size: .77rem;">@item.MatchingPercentage</p>
                    <div class="progress rounded" style="height: 5px;">
                        <div class="progress-bar" role="progressbar" style="width:@item.MatchingPercentage" aria-valuenow="80"
                             aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </td>
                <td>
                    <a class="btn btn-link btn-sm btn-rounded" asp-controller="Home" asp-action="Profile" asp-route-userId="@item.User.Id" target="_blank">Profile</a>
                </td>
            </tr>
        }
    </tbody>
</table>
