@model TopJobs.Models.JobAd

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>New Job Ad</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Title</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyId" class="control-label">Company</label>
                <select asp-for="CompanyId" class ="form-control" asp-items="ViewBag.CompanyId"></select>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="PreferenceId" class="control-label"></label>
                <select asp-for="PreferenceId" class ="form-control" asp-items="ViewBag.PreferenceId"></select>
            </div>
            <div class="form-group">
                <label asp-for="RequiredExperience" class="control-label">Required Experience (in years)</label>
                <input type="number" asp-for="RequiredExperience" class="form-control" />
                <span asp-validation-for="RequiredExperience" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Continue to preferences" class="btn btn-primary" style="margin-top:20px"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Cancel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
